<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Search by Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:textSize="35sp"
            android:layout_marginTop="43dp"
            android:layout_marginBottom="43dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/advance_title" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="#03A9F4"/>
    <EditText
            android:layout_width="345dp"
            android:layout_height="65dp"
            android:ems="10"
            android:id="@+id/advance_title"
            app:layout_constraintTop_toBottomOf="@+id/title" android:layout_marginBottom="18dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/search"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" android:layout_marginEnd="35dp" android:layout_marginRight="35dp"
            android:hint="movie title"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/advance_title"
            android:layout_marginBottom="486dp"/>
</android.support.constraint.ConstraintLayout>